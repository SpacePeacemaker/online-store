{% extends 'base.jinja2' %}

{% block content %}
        <div class="Middle Middle_top">
            <div class="Section Section_column Section_columnLeft">
                <div class="wrap">
                    <div class="Section-column">
                        <div class="Section-columnSection">
                            <header class="Section-header">
                            <strong class="Section-title">Навигация
                            </strong>
                            </header>
                            <div class="Section-columnContent">
                                <div class="NavigateProfile">
                                    <ul class="menu menu_vt">
                                        <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{{ url('accounts:my-account') }}">Личный кабинет</a>
                                        </li>
                                        <li class="menu-item"><a class="menu-link" href="#">Профиль</a>
                                        </li>
                                        <li class="menu-item"><a class="menu-link" href="#">История заказов</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="Section-content">
                        <div class="Account">
                            <div class="Account-group">
                                <div class="Account-column">
                                    {% if request.user.avatar %}
                                        <div class="Account-avatar"><img src="{{request.user.avatar.url}}" alt="card.jpg">
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="Account-column">
                                    <div class="Account-name">{{request.user.full_name}}
                                    </div>
                                    <a class="Account-editLink" href="#">Редактировать профиль</a>
                                </div>
                            </div>
                            <div class="Account-group">
                                <div class="Account-column Account-column_full">
                                    <div class="Order Order_anons">
                                        <div class="Order-personal">
                                            <div class="row">
                                                <div class="row-block"><a class="Order-title" href="#">Заказ <span class="Order-numberOrder">№200</span> от <span class="Order-dateOrder">21.07.2020</span></a>
                                                    <div class="Account-editLink"><a href="#">История заказов</a>
                                                    </div>
                                                </div>
                                                <div class="row-block">
                                                    <div class="Order-info Order-info_delivery">
                                                        <div class="Order-infoType">Тип доставки:
                                                        </div>
                                                        <div class="Order-infoContent">Обычная доставка
                                                        </div>
                                                    </div>
                                                    <div class="Order-info Order-info_pay">
                                                        <div class="Order-infoType">Оплата:
                                                        </div>
                                                        <div class="Order-infoContent">Онлайн картой
                                                        </div>
                                                    </div>
                                                    <div class="Order-info">
                                                        <div class="Order-infoType">Общая стоимость:
                                                        </div>
                                                        <div class="Order-infoContent">200.99$
                                                        </div>
                                                    </div>
                                                    <div class="Order-info Order-info_status">
                                                        <div class="Order-infoType">Статус:
                                                        </div>
                                                        <div class="Order-infoContent">Не оплачен
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
