{% extends 'base.jinja2' %}

{% block content %}
    <h1 class="Middle-title">{{object.name}}</h1>
    <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                   <h3>{{object.description}}</h3>
                </div>
                <div class="Section-content">
                    <div class="Profile">
                        <form class="form Profile-form" action="#" method="post">
                            <div class="row">
                                <div class="row-block">
                                    <div class="form-group">
                                        {% if object.image %}:
                                            <div class="Profile-avatar">
                                                <div class="Profile-img"><img src="{{object.image.url}}" alt="f84fd2ccc3eb706c90486b8fcec56ceb.jpg">
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="row-block">
                                    <div class="form-group">
                                        <label class="form-label" for="address">Адрес
                                        </label>
                                        <h3>{{object.address}}</h3>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="phone">Телефон
                                        <h3>{{object.phone}}</h3>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="mail">E-mail
                                        </label>
                                         <h3>{{object.email}}</h3>
                                    </div>
                                        <div class="form-group">
                                        <label class="form-label" for="mail">E-mail
                                        </label>
                                         <h3>{{object.product}}</h3>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="Section-content">
                    <header class="Section-header">
                        <h2 class="Section-title">Популярные товары
                        </h2>
                    </header>
                    <div>
                        <div><a class="Card-picture" href="#"><img src="assets/img/content/home/card.jpg" alt="card.jpg"></a>
                            <div class="Card-content">
                                <strong class="Card-title"><a href="#">Corsair Carbide Series Arctic White Steel</a>
                                </strong>
                                <div class="Card-description">
                                    <div class="Card-cost"><span class="Card-price">$210.00</span>
                                    </div>
                                    <div class="Card-category">Media / xbox
                                    </div>
                                    <div class="Card-hover"><a class="Card-btn" href="#"><img src="assets/img/icons/card/cart.svg" alt="cart.svg"></a><a class="Card-btn" href="compare.html"><img src="assets/img/icons/card/change.svg" alt="change.svg"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
{% endblock %}
